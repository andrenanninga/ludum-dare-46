{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "~": [
        "./index.ts"
      ],
      "~/*": [
        "./*"
      ],
    },
    "lib": [
      "DOM",
      "esnext"
    ]
  }
}
